<!-- Comment Submit Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Submit Your Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="comment" method="post">
                <input type="hidden" name="postId" id="postId" />
                <div class="modal-body">
                    <div class=" form-floating mb-3">
                        <textarea class="form-control" id="commentContent" name="commentContent" placeholder="Comment" required></textarea>
                        <label for="commentContent" class="form-label">Comment</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Submit Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>