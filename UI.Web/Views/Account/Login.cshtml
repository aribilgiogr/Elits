@model UI.Web.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h1 class="text-center">Login Form</h1>
<small class="text-muted">
    Please enter your username or email and password to log in. If you don't have an account, you can <a asp-action="Register">register here</a>. If you forgot your password, you can <a asp-action="ForgotPassword">reset it</a>.
</small>
<hr />
<form asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="UserNameOrEmail" class="form-control rounded-pill" />
        <label asp-for="UserNameOrEmail" class="control-label"></label>
        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Password" class="form-control rounded-pill" />
        <label asp-for="Password" class="control-label"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check form-switch mb-3">
        <input class="form-check-input" asp-for="RememberMe" role="switch" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <input type="submit" value="Login" class="btn btn-outline-dark rounded-pill btn-sm w-100" />
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
